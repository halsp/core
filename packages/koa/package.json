    "qs": "^6.11.2"
  },
  "devDependencies": {
    "@koa/cors": "4.0.0",
    "@koa/router": "^12.0.0",
    "@types/koa": "^2.13.9",
    "@types/koa-cors": "0.0.3",
    "@types/koa__cors": "^4.0.1",
    "@types/koa__router": "^12.0.1",
    "@types/qs": "^6.9.8",
    "@types/supertest": "^2.0.14",
    "supertest": "^6.3.3"
  },
  "files": [
    "/dist/*",
    "/src/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
