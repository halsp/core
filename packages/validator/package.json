{
  "name": "@halsp/validator",
  "version": "1.1.1",
  "description": "Halsp 的参数校验插件",
  "engines": {
    "node": ">=12.14.0"
  },
  "homepage": "https://halsp.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/halsp/core"
  },
  "keywords": [
    "halsp",
    "pipe",
    "class-validator"
  ],
  "bugs": {
    "url": "https://github.com/halsp/core/issues",
    "email": "support@hal.wang"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "sh ../../scripts/clean-dist.sh && tsc",
    "lint": "eslint src test --ext .ts",
    "pretest": "npm run build",
    "test": "jest"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@halsp/core": "^1.1.1",
    "@halsp/inject": "^1.1.1",
    "@halsp/pipe": "^1.1.1",
    "class-validator": "^0.14.0",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "class-validator": "*"
  },
  "peerDependenciesMeta": {
    "class-validator": {
      "optional": true
    }
  },
  "files": [
    "/dist/*",
    "/src/*",
    "/test/*",
    ".eslintignore",
    ".eslintrc.js",
    ".gitignore",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
  ]
}
