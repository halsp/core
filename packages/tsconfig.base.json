{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "target": "es2015",
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist/**/*",
    "coverage/**/*",
    "node_modules/**/*",
  ]
}