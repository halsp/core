{
  "name": "@sfajs/testing",
  "version": "0.0.2",
  "description": "sfajs 的测试工具",
  "homepage": "https://github.com/sfajs/testing",
  "repository": {
    "type": "git",
    "url": "https://github.com/sfajs/testing"
  },
  "keywords": [
    "sfa",
    "sfajs",
    "test"
  ],
  "bugs": {
    "url": "https://github.com/sfajs/testing/issues",
