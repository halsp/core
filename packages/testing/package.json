    "reflect-metadata": "^0.1.13",
    "shelljs": "^0.8.5",
    "supertest": "^6.2.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.1",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "codecov": "^3.8.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
